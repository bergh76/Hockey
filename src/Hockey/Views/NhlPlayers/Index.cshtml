@model IEnumerable<Hockey.ViewModels.NhlPlayerViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="price-center-align1" style="display:block;">
    <div class="price-center-align center-block">
        <div class="col-md-12">
            @if (Model.Count() != 0)
            {
                @foreach (var item in Model)
                { 
                    <label asp-for="@item.PlayerId" hidden></label>
                    <div class="col-md-3 col-md-8 col-md-12">
                        <div class="sports-subscribe-sec high">
                            <div>
                                <img class="img img-responsive team-logo-xs pull-left" alt="@item.Team" src="~/@item.TeamImgPath" /><h5>@Html.DisplayFor(modelItem => item.Season)</h5>
                            </div>
                            <div class="subInfo">
                                <div class="txt-3 cc_wrap web_price">
                                    @if (item.ImagePath != null)
                                    {
                                        <div>
                                            <a asp-action="Details" asp-route-id="@item.PlayerId"><img class="img img-responsive img-wrapper" alt="@item.FirstName @item.LastName" src="~/@item.ImagePath" ) /></a>
                                        </div>
                                    }
                                    else
                                    {
                                        <div>
                                            <img class="img img-responsive" src="~/images/MissingProductImage.jpg" />
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="subNow">
                                <h5># @Html.DisplayFor(modelItem => item.JersyNumber) @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</h5>
                            </div>
                            <div>
                                <a asp-action="Edit" asp-route-id="@item.PlayerId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.PlayerId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.PlayerId">Delete</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="jumbotron alert-danger"><h3>Listan är tom</h3></div>
            }
        </div>
    </div>
</div>
